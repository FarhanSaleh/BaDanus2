<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp">
    <TextView
        android:id="@+id/labelTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nama Kegiatan"
        android:layout_marginTop="10dp"
        android:textSize="16dp"
        android:layout_marginLeft="10dp"/>
    <EditText
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="10dp"
        android:id="@+id/edt_title"
        android:hint="Masukkan Nama Kegiatan"
        android:textSize="16dp"
        android:layout_width="match_parent"
        android:background="@drawable/edit_text_1"
        android:layout_below="@+id/labelTitle"
        android:paddingVertical="16dp"
        android:paddingHorizontal="20dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/labelDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tanggal Kegiatan"
        android:layout_below="@+id/edt_title"
        android:layout_marginTop="20dp"
        android:textSize="16dp"
        android:gravity="center"/>

    <DatePicker
        android:id="@+id/edt_date_deadline"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/labelDate"
        android:calendarViewShown="false"
        android:datePickerMode="spinner" />

</RelativeLayout>